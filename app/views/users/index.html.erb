<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Usuarios
    <small>todos los usuarios</small>
  </h1>
  <ol class="breadcrumb">
    <li>
    <%= link_to users_path, :class => 'logo' do %>
      <i class="fa fa-users"></i>Usuarios
    <% end -%>
    </li>
  </ol>
</section>

<!-- Main content -->

<section class="content">
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">

        </h3>

        <div class="box-tools">
          <%= link_to new_user_path, :class => 'btn btn-block btn-default' do %>
             <span class="fa fa-plus" aria-hidden="true"></span> Nuevo Usuario
          <% end %>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Correo Electrónico</th>
            <th>Tipo</th>
            <th>Fecha Creación</th>
            <th>Contraseña</th>
            <th width="170px"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= content_tag :span, user.role, class: "label label-success" %></td>
              <td><%= user.created_at %></td>
              <td><% if user.encrypted_password %> <i class="fa fa-check-circle"></i> <%else%> <i class="fa fa-times-circle"></i><% end %></td>
              <td><div class="btn-group">                
                <%= link_to 'Mostrar', user, class: "btn btn-xs btn-default" %>
                <%= link_to 'Editar', edit_user_path(user), class: "btn btn-xs btn-default" %>
                <%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Seguro que desea eliminar este usuario?' }, class: "btn btn-xs btn-danger" %>
              </div></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      </div>
      <!-- /.box-body -->
      <div class="box-footer">
      </div><!-- /.box-footer-->

    </div>
    <!-- /.box -->
  </div>
</div>
</section><!-- /.content -->