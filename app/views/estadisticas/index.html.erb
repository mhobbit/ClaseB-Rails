<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Estadísticas
    <small>advanced tables</small>
  </h1>
  <ol class="breadcrumb">
    <li>
    <%= link_to root_url, :class => 'logo' do %>
      <i class="fa fa-dashboard"></i> Dashboard
    <% end -%>
    </li>
    <li>
    <%= link_to estadisticas_path, :class => 'logo' do %>
      Estadísticas
    <% end -%>
    </li>
  </ol>
</section>

<!-- Main content -->

<section class="content">
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">
          <% if @rut %>
            Resultados de busqueda para RUT: <%= @rut %>
          <% end -%>
        </h3>

        <div class="box-tools">
          <form class="input-group input-group-sm" style="width: 150px;">
            <input type="text" name="rut" class="form-control pull-right" placeholder="Search">

            <div class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </form>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Rut Alumno</th>
            <th>Velocidadmedia</th>
            <th>Velocidadmaxima</th>
            <th>Velocidadminima</th>
            <th>Ruta</th>
            <th>Tiempocarril</th>
            <th>Tiempofueracarril</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @estadisticas.each do |estadistica| %>
            <tr>
              <td><%= estadistica.rut %></td>
              <td><%= estadistica.velocidadMedia %></td>
              <td><%= estadistica.velocidadMaxima %></td>
              <td><%= estadistica.velocidadMinima %></td>
              <td><%= estadistica.ruta %></td>
              <td><%= estadistica.tiempoCarril %></td>
              <td><%= estadistica.tiempoFueraCarril %></td>
              <td><%= link_to 'Mostrar', estadistica, class: "btn btn-xs btn-primary" %></td>
              <td><%= link_to 'Editar', edit_estadistica_path(estadistica), class: "btn btn-xs btn-warning" %></td>
              <td><%= link_to 'Eliminar', estadistica, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
</section><!-- /.content -->
<%= link_to 'New Estadistica', new_estadistica_path %>
