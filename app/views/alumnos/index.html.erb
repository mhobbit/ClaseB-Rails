<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Alumnos
    <small>todos los alumnos</small>
  </h1>
  <ol class="breadcrumb">
    <li>
    <%= link_to alumnos_path do %>
      <i class="fa fa-graduation-cap"></i>Alumnos
    <% end -%>
    </li>
  </ol>
</section>

<!-- Main content -->

<section class="content">
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">
          <% if @rut %>
            Resultados de busqueda para RUT: <%= @rut %>
          <% end -%>
        </h3>

        <div class="box-tools">
          <form class="input-group input-group-sm" style="width: 200px;">
            <input type="text" name="rut" class="form-control pull-right" placeholder="RUT Alumno">

            <div class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </form>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Rut Alumno</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th align="right"></th>
          </tr>
        </thead>

        <tbody>
        <% @alumnos.each do |alumno| %>
            <tr>
              <td><%= alumno.rut %></td>
              <td><%= alumno.nombre ? alumno.nombre : "" %></td>
              <td><%= alumno.apellido ? alumno.apellido : "" %></td>
              <td align="right"><div class="btn-group">                
                <%= link_to 'Mostrar', alumno, class: "btn btn-xs btn-default" %>
                <%= link_to 'Editar', edit_alumno_path(alumno), class: "btn btn-xs btn-default" %>
                <%= link_to 'Eliminar', alumno, method: :delete, data: { confirm: 'Â¿Seguro que desea eliminar este usuario?' }, class: "btn btn-xs btn-danger" %>
              </div></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="box-footer clearfix">
      </div>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
</section><!-- /.content -->