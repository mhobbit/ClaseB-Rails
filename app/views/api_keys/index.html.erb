<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Llaves API
    <small>Llaves API activas en el sistema</small>
  </h1>
  <ol class="breadcrumb">
    <li>
    <%= link_to api_keys_path, :class => 'logo' do %>
      <i class="fa fa-key"></i>Llaves API
    <% end -%>
    </li>
  </ol>
</section>

<!-- Main content -->

<section class="content">
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">

        </h3>

        <div class="box-tools">
          <%= link_to new_api_key_path, :class => 'btn btn-block btn-default' do %>
             <span class="fa fa-plus" aria-hidden="true"></span> Nueva Llave
          <% end %>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nombre simulador</th>
            <th>Llave</th>
            <th>Descripción</th>
            <th width="170px"></th>
          </tr>
        </thead>

        <tbody>
          <% @api_keys.each do |api_key| %>
            <tr>
              <td><%= api_key.name %></td>
              <td><%= api_key.key %></td>
              <td><%= api_key.description %></td>

              <td><div class="btn-group">                
                <%= link_to 'Mostrar', api_key, class: "btn btn-xs btn-default" %>
                <%= link_to 'Editar', edit_api_key_path(api_key), class: "btn btn-xs btn-default" %>
                <%= link_to 'Eliminar', api_key, method: :delete, data: { confirm: '¿Seguro que desea eliminar este mapa?' }, class: "btn btn-xs btn-danger" %>
              </div></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      </div>
      <!-- /.box-body -->
      <div class="box-footer">
      </div><!-- /.box-footer-->

    </div>
    <!-- /.box -->
  </div>
</div>
</section><!-- /.content -->