<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Mapas
    <small>todos los mapas</small>
  </h1>
  <ol class="breadcrumb">
    <li>
    <%= link_to mapas_path, :class => 'logo' do %>
      <i class="fa fa-map"></i>Mapas
    <% end -%>
    </li>
  </ol>
</section>

<!-- Main content -->

<section class="content">
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">

        </h3>

        <div class="box-tools">
          <%= link_to new_mapa_path, :class => 'btn btn-block btn-default' do %>
             <span class="fa fa-plus" aria-hidden="true"></span> Nuevo Mapa
          <% end %>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Fecha Creación</th>
            <th>Mapa Actual?</th>
            <th width="170px"></th>
          </tr>
        </thead>

        <tbody>
          <% @mapas.each do |map| %>
            <tr>
              <td><%= map.created_at %></td>
              <td>
                <% if map.currentMap %> 
                  <i class="fa fa-check"></i>
                <% else %>
                  <i class="fa fa-times"></i>
                <% end %>
              </td>
              <td><div class="btn-group">                
                <%= link_to 'Mostrar', map, class: "btn btn-xs btn-default" %>
                <%= link_to 'Editar', edit_mapa_path(map), class: "btn btn-xs btn-default" %>
                <%= link_to 'Eliminar', map, method: :delete, data: { confirm: '¿Seguro que desea eliminar este mapa?' }, class: "btn btn-xs btn-danger" %>
              </div></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      </div>
      <!-- /.box-body -->
      <div class="box-footer">
      </div><!-- /.box-footer-->

    </div>
    <!-- /.box -->
  </div>
</div>
</section><!-- /.content -->