<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    
    <small></small>
  </h1>
  <ol class="breadcrumb">
    <li>
    <%= link_to mapas_path, :class => 'logo' do %>
      <i class="fa fa-map"></i>Mapas
    <% end -%>
    </li>
    <li>
    <%= link_to @mapa, :class => 'logo' do %>
      Mapa#<%= @mapa.id %>
    <% end -%>
    </li>

  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">Mapa #<%= @mapa.id %> </h3>
      <div class="box-tools pull-right">
        <%= link_to edit_mapa_path(@mapa.id), :class => 'btn btn-block btn-default' do %>
           <span class="fa fa-edit" aria-hidden="true"></span> Editar Mapa
        <% end %>
      </div>
    </div>
    <div class="box-body">
    <ul>
      <li>
        <strong>Mapa: </strong><%= @mapa.mapa %>
      </li>
    </ul>

    </div><!-- /.box-body -->
    <div class="box-footer">
    </div><!-- /.box-footer-->
  </div><!-- /.box -->

</section><!-- /.content -->
